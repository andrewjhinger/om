<div class="guest {{guestAvailable}} {{guestAttending}} l-contain l-grid-u" data-guest="{{id}}">
    <div class="guest-details">
        <h2 class="l-grid">
            <span class="guest-salutation l-grid-u">
                <span class="guest-title">{{title}}</span>
                <span class="guest-name">{{name}}</span>
            </span>

            <span class="guest-title-val l-grid-u">
                <input type="text" value="{{title}}" placeholder="Title" data-title readonly>
            </span>
            <span class="guest-name-val l-grid-u">
                <input type="text" value="{{name}}" placeholder="Full Name" data-name readonly>
            </span>
        </h2>

        <p class="guest-attending-val">
            <label>
                <input type="checkbox" data-attending {{#if is_attending}}checked{{/if}}>
                Is Attending
            </label>
        </p>

        <span class="guest-email-val l-grid-u">
            <p class="guest-email-val" {{#if is_plusone}}style="display:none"{{/if}}>
                <label>
                    <label for="guest-email-val">Optional email address:</label><br>
                    <input type="text" value="{{email}}" placeholder="bestfriend@email.com" data-email>
                </label>
            </p>
        </span>
    </div>

    <div class="guest-ctrls">
        <button class="guest-add" data-add-guest>Add Guest</button>
    </div>
</div>
